doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Search
    link(rel='stylesheet' href='/style.css')
    link(rel='shortcut icon' href='/favicon.ico' type='image/x-icon')
  body
  
    h1 Search
    form(action='./search' method='GET')
      input(type='text' name='q')
      button Send
    |    
    ul 
        each vehicle in results
          li
            a(href='http://localhost:3000/vehicles/' + vehicle.id)
                h3 #{vehicle.name}
                img(src= vehicle.thumbnail)            
               
            
    a(href='/login') login
    |  or 
    a(href='/register') register
    #root
    script(crossorigin='' src='https://unpkg.com/react@17.0.1/umd/react.development.js')
    script(crossorigin='' src='https://unpkg.com/react-dom@17.0.1/umd/react-dom.development.js')
    script(src='https://unpkg.com/@babel/standalone@7.12.6/babel.min.js')
    script.
      const state = {
      cookiesAccepted: {cookiesAccepted}
      }
